# PostgreSQL - environment variables used by the app (copy to .env)
# The app reads DB_HOST/DB_PORT/DB_USER/DB_PASSWORD/DB_NAME/DB_SSLMODE
# These defaults match docker-compose.yml for local development.
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
# NOTE: set this to the same password as POSTGRES_PASSWORD in docker-compose.yml
DB_PASSWORD=password
DB_NAME=bank_sampah
DB_SSLMODE=disable

# Backwards-compat (optional): some tools expect PG* variables
PGHOST=${DB_HOST}
PGPORT=${DB_PORT}
PGUSER=${DB_USER}
PGPASSWORD=${DB_PASSWORD}
PGDATABASE=${DB_NAME}
PGSSLMODE=${DB_SSLMODE}

# JWT secret (change in production)
JWT_SECRET=change-me-to-a-secure-value
